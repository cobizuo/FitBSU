<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="workouts content">
    <h2>Workout Logs</h2>

    <% if (workouts.length > 0) { %>
      <% workouts.forEach(workouts => { %>
        <a class="single" href="/workouts/<%= workouts._id %>">
          <h3 class="title"><%= workouts.title %></h3>
          <p class="synopsis"><%= workouts.synopsis %></p>
        </a>

      <% }) %>
    <% } else { %>
      <p>There are no logs to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>